{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsAngularStandaloneLibrary",
  "title": "Angular Standalone Library Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the library."
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path of the library source directory.",
      "default": "app",
      "visible": false
    },
    "sourceDir": {
      "type": "string",
      "format": "path",
      "description": "The path of the app source directory.",
      "default": "src",
      "visible": false
    }
  },
  "required": [
    "name"
  ]
}
